<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapViewFragment">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="55sp"
            android:layout_height="55sp"
            android:layout_gravity="right"
            android:scaleType="fitCenter"
            android:src="@drawable/coffie_touka" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="55sp"
            android:layout_height="55sp"
            android:layout_gravity="right"
            android:scaleType="fitCenter"
            android:src="@drawable/eat_touka" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="55sp"
            android:layout_height="55sp"
            android:layout_gravity="right"
            android:scaleType="fitCenter"
            android:src="@drawable/tranp" />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="55sp"
            android:layout_height="55sp"
            android:layout_gravity="right"
            android:scaleType="fitCenter"
            android:src="@drawable/config" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/shopData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/cast_expanded_controller_text_color"
        android:orientation="vertical">

    </LinearLayout>

</FrameLayout>